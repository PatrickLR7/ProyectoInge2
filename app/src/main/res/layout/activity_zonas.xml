<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phoenixdroid.proyectoinge2.ZonasActivity"
    android:background="#85c1e9">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_weight="1"
            app:srcCompat="@drawable/vector"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seleccione_zona"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnMatinilla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Matinilla"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnQNavajas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Quebrada Navajas"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnAlvarez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Calle Los Álvarez"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnCPRioUruca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Calle Paralela Río Uruca"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnSPitier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Salida Quebrada Pitier"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnQTapezco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Quebrada Tapezco"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnCDelgado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Calle Los Delgado"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnLaFuente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Puente Sector la Fuente"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnSanguijuela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Quebrada Sanguijuela"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnCruceP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Cruce a P."
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnQCanoas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Quebrada Canoas"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnCañada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Calle de la Cañada"
                    android:textSize="50px"/>

                <Button
                    android:id="@+id/btnPMachete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border"
                    android:onClick="actVideos"
                    android:text="Paso Machete"
                    android:textSize="50px"/>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
