<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.phoenixdroid.proyectoinge2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/modo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione el modo:"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="70px"
            tools:text="Seleccione el modo:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:background="@drawable/btn_border"
                android:onClick="iniciarActZonas"
                android:text="Modo Vidente"
                android:textSize="80px" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:background="@drawable/btn_border"
                android:text="Modo No Vidente"
                tools:text="Modo No Vidente"
                android:textSize="80px"/>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
